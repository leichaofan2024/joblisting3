<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    排序
    <span class="caret"></span>
  </button>
  <ul class= "dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li><%= link_to("按工资上限", jobs_path(:order => "by_lower_bound")) %></li>
        <li><%= link_to("按工资下限", jobs_path(:order => "by_upper_bound")) %></li>
        <li><%= link_to("按发表时间", jobs_path) %></li>
  </ul>

</div>
<div class="container-fluid">
  <table class="table table-boldered">
    <thead>
      <tr>
        <th>#</th>
        <th>职缺</th>
        <th>薪资下限</th>
        <th>薪资上限</th>
        <th>发布日期</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.created_at %></td>
          <td>
            <%= link_to("edit",edit_job_path(job),class: "btn btn-primary") %>
            <%= link_to("delete", job_path(job), method: :delete, data:{:confirm=>"Are you sure?"},class:"btn btn-danger")%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
